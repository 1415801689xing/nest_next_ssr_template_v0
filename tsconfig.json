{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"sourceMap": true,
		"jsx": "react",
		"outDir": "./dist",
		"baseUrl": "./",
		"strictNullChecks": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,

		"lib": ["dom", "es2017"],
		// "allowJs": true,
		// "noEmit": true,
		"skipLibCheck": true,
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
		// "preserveConstEnums": true
	},
	"exclude": ["node_modules", "dist"]
}
